    <main>

        <section>
            <div class="container give-sec">
                <h1 class="heading"><br>Grab some Items</h1>
                <a href="give-get.html">
                    <button class="button">get</button>
                </a>
            </div>
        </section>

        <section>
            <div class="container give-food">
                <h1 class="heading">
                    Wanna give away some items?
                </h1>

                <form action="/foods"  method="post" novalidate  class="upload-food">
                    <div class="upload-img-container">
                        <div class="wrapper">
                            <div class="up-image">
                                <img src="" alt="">
                            </div>
                            <div class="up-content">
                                <div class="up-icon"><i class="uil uil-upload"></i></div>
                                <div class="up-text">No files chosen</div>
                            </div>
                            <div id="cancle-btn"><i class="uil uil-times"></i></div>
                            <div class="up-file-name">File name</div>
                        </div>
                        <input  type="file" name="food[image]" id="default-btn" hidden>
                        <input  type="button" value="choose photo" name="food[image]" onclick="defaultBtnActive()" class="button">
                    </div>
                    <input type="text" name="food[name]" class="form-input" placeholder="Item Name" required autocomplete="off">
                    <div name="vg-novg" class="drop-down">
                        <div class="select">
                            <span class="selected">category</span>
                            <div class="caret"></div>
                        </div>
                        <select class="menu" name="food[veg]" id="">
                          <option selected value="food">Food</option>
                          <option value="non-food">Non Food</option>
                       </select>
                     
                      <script>console.log(this.veg)</script>
                    </div>
                    <textarea name="food[description]" placeholder="Description..." class="form-input" required></textarea>
                    <input type="text" name="food[location]"  class="form-input" placeholder="location" required autocomplete="off">
                    <div name="bestBy" class="drop-down">
                        <div class="select">
                            <!-- <span class="selected">Best By</span>
                            <div class="caret"></div> -->
                        </div>
                        <!-- <select class="menu" name="food[useByDate]" id="">
                          <option selected value="0"></option>
                          <option value="1">1 day</option>
                          <option value="2">2 day</option>
                          <option value="3">3 day</option>
                          <option value="4">4 day</option>
                          <option value="5">5 day</option>
                        </select> -->

                    </div>
                    <button type="submit" class="button">upload</button>
                </form>
            </div>
        </section>

        <footer>
            <div class="container footer">
                <div class="footer-box">
                    <div class="footer-content">
                        <h1 class="fl-logo">ZiLO</h1>
                    </div>
                    <ul class="socials">
                        <li class="sl">
