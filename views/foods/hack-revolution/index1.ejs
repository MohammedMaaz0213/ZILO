                <ul class="container listed-items">
                    <% if(foods.length == 0){   %>
                        <h4>No results</h4> 
                        <% }  %> 
            <% for(let food of foods){ %> 
                    <li>
                        <div class="list-item">
                            <div class="item-img">
                                <img src="<%=food.image%>">
                            </div>
                            <div class="item-desc">
                                <h3 class="food-name">
                                
                                <%= food.name  %>
                                </h3>
                                <p class="text">from, <span class="provider">Amaan</span></p>
                                <p class="provider"><%=food.veg%> </p>
                                <div class="location-days">
                                    <p class="text">
                                        <span class="distance"><%=food.distance%></span> km away..
                                    </p>
                                    <p class="text">
                                        stays fresh for <span class="days"><%=food.useByDate%> </span> days 
                                    </p>
                                </div>
                            </div>
                            <a href="/foods/<%=food._id%>">
                              Details
                                <!-- <button type="submit" class="button item-req"><i class="uil uil-check"></i></button> -->
                            </a>
                        </div>
                    </li>
                    <%}%> 
                </ul>
             <a href="/foods">Go Back</a>
            </div>
