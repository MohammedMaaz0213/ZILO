        <section>
            <div class="container give-sec">
                <h1 class="heading">Have food you'd like to give away?</h1>
               <button  class="button"><a style="color:white" href="/foods/new">give</a></button>
            </div>
        </section>

        <section>
            <div class="container get-sec">
                <form action="/foods" method="GET" class="filter-box">
                    <div class="search-box">
                        <input type="text" name="food[name]" id="" placeholder="Search for food..." autocomplete="off">
                         <select class="search-box" name="food[veg]" id="veg">
                            <option selected value="both">both</option>
                            <option value="food">food</option>
                            <option value="non-food">non-food</option>
                           </select>
    
                        <a href="/foods?name=a&category=a"><button type="submit" class="search-button"><i class="uil uil-search"></i></button></a>

                    </div>
             
                <!-- </form>
                <form action="/foods?category=dsa" method="GET" class="filter-box">
